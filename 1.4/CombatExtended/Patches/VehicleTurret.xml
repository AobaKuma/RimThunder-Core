<?xml version="1.0" encoding="utf-8"?>
<Patch>
	<Operation Class="PatchOperationReplace">
		<xpath>Defs/Vehicles.VehicleTurretDef[@Name="RT_BaseVehicleMG_Light" or @Name="RT_BaseVehicleMG_Medium" or @Name="RT_BaseVehicleMG_Heavy"]/chargePerAmmoCount</xpath>
		<value>
			<chargePerAmmoCount>1</chargePerAmmoCount>
		</value>
	</Operation>

	<Operation Class="PatchOperationReplace">
		<xpath>Defs/Vehicles.VehicleTurretDef[@Name="RT_BaseVehicleMG_Light" or @Name="RT_BaseVehicleMG_Medium" or @Name="RT_BaseVehicleMG_Heavy"]/reloadTimer</xpath>
		<value>
			<reloadTimer>7.8</reloadTimer>
		</value>
	</Operation>

	<Operation Class="PatchOperationReplace">
		<xpath>Defs/Vehicles.VehicleTurretDef[@Name="RT_BaseVehicleMG_Light" or @Name="RT_BaseVehicleMG_Medium" or @Name="RT_BaseVehicleMG_Heavy"]/genericAmmo</xpath>
		<value>
			<genericAmmo>false</genericAmmo>
		</value>
	</Operation>

	<Operation Class="PatchOperationReplace">
		<xpath>Defs/Vehicles.VehicleTurretDef[@Name="RT_BaseVehicleMG_Light" or @Name="RT_BaseVehicleMG_Medium"]/fireModes</xpath>
		<value>
			<fireModes>
				<li>
					<shotsPerBurst>20</shotsPerBurst>
					<ticksBetweenShots>6</ticksBetweenShots>
					<ticksBetweenBursts>60</ticksBetweenBursts>
					<label>Auto</label>
					<texPath>UI/Gizmos/FireRate_Auto</texPath>
				</li>
				<li>
					<shotsPerBurst>10</shotsPerBurst>
					<ticksBetweenShots>6</ticksBetweenShots>
					<ticksBetweenBursts>60</ticksBetweenBursts>
					<label>Burst</label>
					<texPath>UI/Gizmos/FireRate_Burst</texPath>
				</li>
				<li>
					<shotsPerBurst>1</shotsPerBurst>
					<ticksBetweenShots>6</ticksBetweenShots>
					<ticksBetweenBursts>60</ticksBetweenBursts>
					<label>Single</label>
					<texPath>UI/Gizmos/FireRate_Single</texPath>
				</li>
			</fireModes>
		</value>
	</Operation>

	<Operation Class="PatchOperationReplace">
		<xpath>Defs/Vehicles.VehicleTurretDef[@Name="RT_BaseVehicleMG_Heavy"]/fireModes</xpath>
		<value>
			<fireModes>
				<li>
					<shotsPerBurst>20</shotsPerBurst>
					<ticksBetweenShots>10</ticksBetweenShots>
					<ticksBetweenBursts>60</ticksBetweenBursts>
					<label>Auto</label>
					<texPath>UI/Gizmos/FireRate_Auto</texPath>
				</li>
				<li>
					<shotsPerBurst>10</shotsPerBurst>
					<ticksBetweenShots>10</ticksBetweenShots>
					<ticksBetweenBursts>60</ticksBetweenBursts>
					<label>Burst</label>
					<texPath>UI/Gizmos/FireRate_Burst</texPath>
				</li>
				<li>
					<shotsPerBurst>1</shotsPerBurst>
					<ticksBetweenShots>10</ticksBetweenShots>
					<ticksBetweenBursts>60</ticksBetweenBursts>
					<label>Single</label>
					<texPath>UI/Gizmos/FireRate_Single</texPath>
				</li>
			</fireModes>
		</value>
	</Operation>


	<Operation Class="PatchOperationReplace">
		<xpath>Defs/Vehicles.VehicleTurretDef[@Name="RT_BaseVehicleMG_Light"]/maxRange</xpath>
		<value>
			<maxRange>55</maxRange>
		</value>
	</Operation>

	<Operation Class="PatchOperationReplace">
		<xpath>Defs/Vehicles.VehicleTurretDef[@Name="RT_BaseVehicleMG_Medium"]/maxRange</xpath>
		<value>
			<maxRange>62</maxRange>
		</value>
	</Operation>

	<Operation Class="PatchOperationReplace">
		<xpath>Defs/Vehicles.VehicleTurretDef[@Name="RT_BaseVehicleMG_Heavy"]/maxRange</xpath>
		<value>
			<maxRange>75</maxRange>
		</value>
	</Operation>


	<Operation Class="PatchOperationReplace">
		<xpath>Defs/Vehicles.VehicleTurretDef[@Name="RT_BaseVehicleMG_Medium"]/shotSound</xpath>
		<value>
			<shotSound>MediumMG</shotSound>
		</value>
	</Operation>

	<Operation Class="PatchOperationReplace">
		<xpath>Defs/Vehicles.VehicleTurretDef[@Name="RT_BaseVehicleMG_Heavy"]/shotSound</xpath>
		<value>
			<shotSound>HeavyMG</shotSound>
		</value>
	</Operation>

</Patch>
